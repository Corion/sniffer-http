#   bash_completion for the screen command
#
#   $Id: .bash_completion,v 1.1 2005-10-23 21:24:15 corion Exp $
#
# Alter the following to reflect the location of this file
#

# This function completes on screen IDs
#
_screens()
{
	local cur
	cur=${COMP_WORDS[ $COMP_CWORD ]}
	COMPREPLY=( $( compgen -W '$( screen -list | perl -ne "print \$1 if /^\s+(.*)\(.*\)$/")' -- $cur) )
}

complete -F _screens screen
complete -f -X '*.@(rar|RAR)' "unrar x "

# unrar(1) completion by Guillaume Rousse <rousse@ccr.jussieu.fr>
#
# $Id: .bash_completion,v 1.1 2005-10-23 21:24:15 corion Exp $

_unrar() 
{
	local cur

	COMPREPLY=()
	cur=${COMP_WORDS[COMP_CWORD]}

	case "$cur" in
	    -*)
		COMPREPLY=( $( compgen -W '-ad -ap -av- -c- -cfg- -cl -cu \
		-dh -ep -f -idp -ierr -inul -kb -o+ -o- -ow -p -p- -r -ta \
		-tb -tn -to -u -v -ver -vp -x -x@ -y' -- $cur ) )
		;;
	    *)
		if [ $COMP_CWORD -eq 1 ]; then
			COMPREPLY=( $( compgen -W 'e l lt p t v vt x' -- $cur ) )
		else
			_filedir '@(rar|RAR)'
		fi
		;;
	esac
  
	return 0

}
complete -F _unrar -o filenames unrar
